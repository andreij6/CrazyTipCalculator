<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CrazyTipCalc" >

    <TextView
        android:id="@+id/billTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="32dp"
        android:layout_marginTop="28dp"
        android:layout_toLeftOf="@+id/tipEditText"
        android:text="@string/bill_text_view" />

    <EditText
        android:id="@+id/billEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/billTextView"
        android:layout_centerHorizontal="true"
        android:ems="5"
        android:inputType="numberDecimal"
        android:text="@string/bill_edit_text" />

    <TextView
        android:id="@+id/finalBilllTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tipEditText"
        android:layout_marginTop="80dp"
        android:layout_toLeftOf="@+id/tipEditText"
        android:text="@string/final_text_view" />

    <EditText
        android:id="@+id/tipEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tipTextView"
        android:layout_alignLeft="@+id/billEditText"
        android:ems="5"
        android:inputType="numberDecimal"
        android:text="@string/tip_edit_text" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tipTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/billTextView"
        android:layout_below="@+id/billEditText"
        android:layout_marginTop="61dp"
        android:text="@string/tip_text_view" />

    <EditText
        android:id="@+id/finalBillEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/finalBilllTextView"
        android:layout_alignBottom="@+id/finalBilllTextView"
        android:layout_alignLeft="@+id/tipEditText"
        android:layout_marginLeft="26dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android1:id="@+id/changeTipTextView"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_below="@+id/tipTextView"
        android1:layout_marginLeft="16dp"
        android1:layout_marginTop="19dp"
        android1:text="@string/tip_text_view" />

    <SeekBar
        android1:id="@+id/changeTipSeekBar"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_alignRight="@+id/finalBillEditText"
        android1:layout_below="@+id/changeTipTextView"
        android1:progress="15" />

</RelativeLayout>
